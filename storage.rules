rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the file
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to validate file size (max 5MB)
    function isValidSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }
    
    // Helper function to validate image file type
    function isValidImageType() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // User profile images - only the owner can upload/read/delete
    match /users/{userId}/profile/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && isValidSize() && isValidImageType();
    }
    
    // Goal-related files - only the owner can upload/read/delete
    match /users/{userId}/goals/{goalId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && isValidSize();
    }
    
    // Habit-related files - only the owner can upload/read/delete
    match /users/{userId}/habits/{habitId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && isValidSize();
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

